<!DOCTYPE html>
<html lang="tr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>@ViewBag.Title</title>

        <meta name="description" content="@ViewBag.Description" />
        <meta name="keywords" content="@ViewBag.Keywords" />
        <meta name="robots" content="all" />
        <meta name="revisit-after" content="1 week" />

        <link href="~/Content/css/style.css" rel="stylesheet" />
        <link href="~/Content/css/homepage-references.css" rel="stylesheet" />

        <link href="~/Content/img/leaf-solutions-favicon.png" rel="shortcut icon" />
        <link href="~/Content/img/leaf-solutions-share.png" rel="image_src" />

        @*Google Fonts (start)*@
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,400,300,600&subset=latin-ext' rel='stylesheet' type='text/css'>
        @*Google Fonts (end)*@

        @*Slider (start)*@
        <script src="~/Scripts/jquery-1.7.1.js"></script>
        <script src="~/Scripts/jmpress.min.js"></script>
        <script src="~/Scripts/jquery.jmslideshow.js"></script>
        <script src="~/Scripts/modernizr.custom.48780.js"></script>
        @*Slider (end)*@
    </head>
    <body>
        <section id="container">
            <header>
                <a href="/">
                    <div id="logo"></div>
                </a>
                <div id="social-media">
                    <a href="?">
                        <div class="social rss"></div>
                    </a>
                    <a href="#">
                        <div class="social share"></div>
                    </a>
                    <a href="//youtube.com/" target="_blank">
                        <div class="social youtube"></div>
                    </a>
                    <a href="//twitter.com/" target="_blank">
                        <div class="social twitter"></div>
                    </a>
                    <a href="//facebook.com/" target="_blank">
                        <div class="social facebook"></div>
                    </a>
                </div>
                @using (Html.BeginForm("Ara", "Home", FormMethod.Get))
                {
                    <div id="search">
                        <div id="search-area">
                            <input type="text" class="search-text" name="search" />
                        </div>
                        <div id="search-button">
                            <input type="submit" value="Ara" />
                        </div>
                    </div>
                }
            </header>
            <nav>
                <a href="/">
                    <div class="nav-item first">
                        <span>Ana Sayfa</span>
                    </div>
                </a>
                <a href="/bize_dair/">
                    <div class="nav-item">
                        <span>Bize Dair</span>
                    </div>
                </a>
                <a href="/referanslar/">
                    <div class="nav-item">
                        <span>Referanslar</span>
                    </div>
                </a>
                <a href="/cozumler/">
                    <div class="nav-item solutions">
                        <div>Çözümler</div>
                        <div class="nav-solutions">
                            <div class="nav-solutions-item">
                                <span>Bireysel</span>
                            </div>
                            <div class="nav-solutions-item solution-last">
                                <span>Kurumsal</span>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="/iletisim/">
                    <div class="nav-item last">
                        <span>İletişim</span>
                    </div>
                </a>
            </nav>

            <section id="content">
                @RenderBody()
            </section>

            <footer>
                <small>2022 &copy; Leaf Solutions Ltd. | Tüm Hakları Saklıdır.</small>
            </footer>
        </section>
        <div style="width: 928px; height: 13px; position: relative; margin: auto"></div>
        <script src="~/Scripts/modernizr.custom.js"></script>
        <script src="~/Scripts/classie.js"></script>
        <script src="~/Scripts/thumbnailGridEffects.js"></script>
        @RenderSection("scripts", required: false) @*Arama motoru için bu kısmı unutma*@
    </body>
</html>