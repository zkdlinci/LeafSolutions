@{
    Layout = "~/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Leaf Solutions | İletişim";
    ViewBag.Description = "Leaf Solutions iletişim sayfası";
    ViewBag.Keywords = "leaf, solutions, iletişim, sayfası";
}

<style>
    #wrapper {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, .5);
        z-index: 9999;
    }

    #message-sent {
        width: 340px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -170px;
        font-weight: 600;
        border-radius: 0 16px;
        color: #191970;
        background: white;
        box-shadow: 0 0 20px 4px #0d6636;
    }

    #close-button {
        width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
        position: absolute;
        top: -8px;
        right: -8px;
        background: white;
        border-radius: 0 8px;
        border: 1px solid #0d6636;
        cursor: pointer;
        font-weight: 600;
    }
</style>

<div class="content-text">
    <h2>Neredeyiz?</h2>
    <div id="google-maps">
        <iframe width="800" height="420" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=tr&amp;geocode=&amp;q=kad%C4%B1k%C3%B6y&amp;aq=&amp;sll=37.0625,-95.677068&amp;sspn=61.928102,135.263672&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Kad%C4%B1k%C3%B6y%2F%C4%B0stanbul,+T%C3%BCrkiye&amp;ll=40.980141,29.08227&amp;spn=0.117381,0.264187&amp;z=13&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=tr&amp;geocode=&amp;q=kad%C4%B1k%C3%B6y&amp;aq=&amp;sll=37.0625,-95.677068&amp;sspn=61.928102,135.263672&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Kad%C4%B1k%C3%B6y%2F%C4%B0stanbul,+T%C3%BCrkiye&amp;ll=40.980141,29.08227&amp;spn=0.117381,0.264187&amp;z=13" style="color:#0000FF;text-align:left">Daha Büyük Görüntüle</a></small>
    </div>

    <h2>İletişim</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "/iletisim" }))
    {
        if (ViewBag.Success != null && ViewBag.Success)
        {
            <div id="wrapper">
                <div id="message-sent">
                    <div id="close-button">
                        <span>X</span>
                    </div>
                    <span>Mesajınız başarıyla gönderilmiştir.</span>
                </div>
            </div>
        }

        <div class="contact-line">
            <button class="obligation-button" type="button">
                <span>Sadece gerekli alanları göster</span>
            </button>
        </div>
        <div class="contact-line">
            <div class="contact-col1">
                <span>Takma Ad</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" id="input-nickname" name="NickName" required />
            </div>
        </div>
        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Ad- Soyad</span>
            </div>
            <div class="contact-col2">
                <input type="text" class="input" name="FullName" />
            </div>
        </div>
        <div class="contact-line">
            <div class="contact-col1">
                <span>e-Posta</span>
            </div>
            <div class="contact-col2">
                <input type="email" class="input" id="input-email" name="Email" required />
            </div>
        </div>
        <div class="contact-line contact-line-unrequired">
            <div class="contact-col1">
                <span>Tel</span>
            </div>
            <div class="contact-col2">
                <input type="tel" class="input" name="Phone" />
            </div>
        </div>
        <div class="contact-line message">
            <div class="contact-col1">
                <span>İleti</span>
            </div>
            <div class="contact-col2">
                <textarea class="textarea" id="input-text" name="Message" required></textarea>
            </div>
        </div>
        <div class="contact-line">
            <button type="submit" class="contact-button" onclick="formEksikMi()">
                <span>Gönder</span>
            </button>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $(".obligation-button").click(function () {
            $(".contact-line-unrequired").slideToggle();
        });
    });

    function formEksikMi() {
        var rumuzDegeri = document.getElementById("input-nickname").value;
        var epostaDegeri = document.getElementById("input-email").value;
        var iletiDegeri = document.getElementById("input-text").value;
        if (rumuzDegeri === "" || iletiDegeri === "" || epostaDegeri === "") {
            alert("Lütfen gerekli alanlari doldurunuz.");
            return false;
        }
    }
</script>
<script>
    $('#wrapper').click(function() {
        $(this).fadeOut('slow');
    });
</script>